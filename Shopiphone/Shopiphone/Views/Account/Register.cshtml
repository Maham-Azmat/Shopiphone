@model Shopiphone.Models.RegisterViewModel
<div class="row">
    <div class="col-md-8">
        <section id="registerForm">


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="container">
                    <!-- GROUP MEMEBER CONTENT HERE -->
                    <div class="container">
                        <!-- GROUP MEMEBER CONTENT HERE -->
                        <style>
                            .vl {
                                border-left: 6px solid green;
                                margin-bottom: -37px;
                                height: 30px;
                            }
                        </style>

                        <div class="vl"></div>

                        <p style="margin-top: 0px;font-size: 30px" class="navbar-text">Registration  </p>
                        <img style="max-width:1000px; margin-top: 10px; margin-left: -10px; margin-bottom: 100px" alt="Brand" src="Pictures/textimage1.png">

                    </div>
                    <style>
                        .vl {
                            border-left: 6px solid green;
                            margin-bottom: -40px;
                            height: 35px;
                        }
                    </style>
                    <!-- Adding specifications of new phone to add by admin -->
                    <!-- label of IMEI NO. and text-box -->
                    <div class="center" style="margin-left: 320px">
                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Name</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>

                        <!-- label of brand name and text-box -->

                        
                        <!-- label of Model name and text-box -->
                        <div class="form-group" style="text-align: left">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">CNIC</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.CNIC, new { @class = "form-control" })
                            </div>
                        </div>

                        <!-- label of warranty and text-box -->
                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Email Id</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Phone Number</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Phoneno, new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Account Number</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Accountno, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Password</label>
                            <div class="col-sm-4">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left"> Confirm Password</label>
                            <div class="col-sm-4">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputType" class="col-sm-2 control-label" style="text-align: left">Home Address</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            </div>
                        </div>
                        <!-- label of picture and picture-box -->
                        <!-- label of price and text-box -->

                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-sm-6 col-md-6">
                                    
                                    <input type="submit" style="background-color: #6B8E23; margin-left: -5px ; color: #ffffff" class="btn btn-default" value="Register" />
                                    </div>
                                
                            </div>
                        </div>
                </div>
                </div>
            }
        </section>
    </div>
 </div>
 @section Scripts {
   @Scripts.Render("~/bundles/jqueryval")
  }
